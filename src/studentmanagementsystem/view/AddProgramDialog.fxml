<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="studentmanagementsystem.controller.AddProgramDialogController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox>
               <children>
                  <Label text="Add New Program" textFill="#222222">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <Label text="Add a new program to the system by filling out the required information." textFill="#646464">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="50.0" right="50.0" top="50.0" />
               </padding>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label prefHeight="27.0" prefWidth="150.0" text="Program Code" textFill="#222222">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldProgramCode" prefHeight="50.0" />
                  <Label prefWidth="150.0" text="Program Name" textFill="#222222">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldProgramName" prefHeight="50.0" prefWidth="333.0" />
                  <Label prefHeight="27.0" prefWidth="150.0" text="Description" textFill="#222222">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldProgramDescription" prefHeight="50.0" prefWidth="333.0" />
                  <Button fx:id="btnAddProgram" mnemonicParsing="false" onAction="#handleAddProgram" prefHeight="50.0" prefWidth="492.0" text="Add Program">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Label fx:id="txtMessage" alignment="CENTER" prefHeight="17.0" prefWidth="492.0" textFill="#ef3e4c">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
   <stylesheets>
      <URL value="@../css/global.css" />
      <URL value="@../css/program-field.css" />
   </stylesheets>
</AnchorPane>
