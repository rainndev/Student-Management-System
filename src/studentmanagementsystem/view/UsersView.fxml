<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" maxHeight="Infinity" maxWidth="Infinity" stylesheets="@../css/global-css.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="studentmanagementsystem.controller.UsersViewController">
    <children>
        <VBox alignment="CENTER_RIGHT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
            <HBox alignment="CENTER_RIGHT" spacing="5.0">
               <children>
                  <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="40.0" prefWidth="429.0" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="fieldSearchUser" prefHeight="40.0" prefWidth="343.0" style="-fx-background-radius: 8; -fx-border-color: #CACACA; -fx-border-width: 1; -fx-border-radius: 8;" text="Search..." HBox.hgrow="ALWAYS">
                           <padding>
                              <Insets left="15.0" />
                           </padding></TextField>
                        <Button fx:id="btnSearchUser" mnemonicParsing="false" onAction="#handleSearchUser" style="-fx-background-radius: 8; -fx-background-color: #222222;" text="Search" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnDetails" mnemonicParsing="false" onAction="#handleSearchDetails" style="-fx-background-radius: 8;" text="Details" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
                <HBox VBox.vgrow="ALWAYS"> 
                    <children>
                        <TableView fx:id="usersTableView" HBox.hgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="columnId" text="id" />
                                <TableColumn fx:id="columnFirstName" text="First Name" />
                                <TableColumn fx:id="columnLastName" text="Last Name" />
                                <TableColumn fx:id="columnRole" text="Role" />
                                <TableColumn fx:id="columnActive" text="Active" />
                        <TableColumn fx:id="columnCreatedAt" text="Created" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
