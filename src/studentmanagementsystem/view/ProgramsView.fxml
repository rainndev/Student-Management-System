<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" maxHeight="Infinity" maxWidth="Infinity" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="studentmanagementsystem.controller.ProgramViewController">
    <children>
        <VBox alignment="CENTER_RIGHT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
            <HBox alignment="CENTER_RIGHT" spacing="5.0">
               <children>
                  <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="40.0" prefWidth="429.0" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="fieldSearchProgram" prefHeight="40.0" prefWidth="343.0" text="Search..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnSearchProgram" mnemonicParsing="false" onAction="#handleSearchProgram" text="Search" />
                     </children>
                  </HBox>
                      <Button fx:id="btnEditProgram" mnemonicParsing="false" onAction="#openEditProgramDialog" text="Edit" />
                  <Button fx:id="btnAddProgram" mnemonicParsing="false" onAction="#openAddProgramDialog" text="Add" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
                <HBox VBox.vgrow="ALWAYS"> 
                    <children>
                        <TableView fx:id="programTableView" HBox.hgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="columnId" text="id" />
                                <TableColumn fx:id="columnProgramCode" text="Program Code" />
                                <TableColumn fx:id="columnProgramName" text="Program Name" />
                                <TableColumn fx:id="columnProgramDescription" text="Description" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
   <stylesheets>
      <URL value="@../css/global.css" />
      <URL value="@../css/table.css" />
      <URL value="@../css/header-style-table.css" />
   </stylesheets>
</AnchorPane>
