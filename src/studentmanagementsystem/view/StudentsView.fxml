<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane id="AnchorPane" maxHeight="Infinity" maxWidth="Infinity" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="studentmanagementsystem.controller.StudentsViewController">
    <children>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <TableView fx:id="studentTableView" HBox.hgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="columnId" text="id" />
                        <TableColumn fx:id="columnFirstName" text="First Name" />
                        <TableColumn fx:id="columnLastName" text="Last Name" />
                        <TableColumn fx:id="columnGender" text="Gender" />
                        <TableColumn fx:id="columnBirthDate" text="Birth Date" />
                        <TableColumn fx:id="columnAddress" text="Address" />
                        <TableColumn fx:id="columnContact" text="Contact No." />
                        <TableColumn fx:id="columnProgram" text="Program" />
                        <TableColumn fx:id="columnYearLevel" text="Year Level" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </HBox>
    </children>
</AnchorPane>
