<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="studentmanagementsystem.controller.LoginController">
   <children>
      <Label layoutX="222.0" layoutY="27.0" text="Student Management System" />
      <VBox alignment="CENTER" layoutX="2.0" layoutY="60.0" prefHeight="340.0" prefWidth="597.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER" prefWidth="600.0" spacing="20.0">
               <children>
                  <Label prefWidth="80.0" text="Username">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameField" prefHeight="50.0" prefWidth="375.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefWidth="600.0" spacing="20.0">
               <children>
                  <Label prefHeight="27.0" prefWidth="80.0" text="Password">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="passwordField" prefHeight="50.0" prefWidth="375.0" />
               </children>
            </HBox>
            <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#handleLogin" prefHeight="47.0" prefWidth="476.0" text="Log  In">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </Button>
            <Label fx:id="txtMessage" text="Label" visible="false">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
